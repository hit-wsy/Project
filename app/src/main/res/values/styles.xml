<resources xmlns:healthy="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0195ff</item>
        <item name="colorPrimaryDark">#0195ff</item>
        <item name="colorAccent">#0195ff</item>
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="date_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="health_kit_icon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="health_auth_desc_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="health_auth_button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">60dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/white_radius_rect</item>
        <item name="android:textColor">#DF753B</item>
        <!--        <item name="android:stateListAnimator">@null</item>-->
    </style>

    <style name="health_auth_desc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="health_auth_desc_tips">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="health_auth_nav_icon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="health_auth_nav_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#1E191E</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="tab_layout_text_style">
        <item name="android:textSize">20sp</item>
    </style>
    <!--Bottom Dialog-->
    <style name="BottomSheetDialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name= "navigation_item">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  饮食记录上传页面菜品列表的样式  -->
    <style name="RecipeListItem">
        <item name="colorControlNormal">@color/black</item>
    </style>

</resources>